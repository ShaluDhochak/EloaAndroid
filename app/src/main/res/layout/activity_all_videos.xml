<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.eloaandroid.View.Activity.AllVideosActivity">


    <include android:id="@+id/headerVideoList_layout"
        layout="@layout/header_layout" />

   <RelativeLayout
       android:id="@+id/videoList_rl"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/headerVideoList_layout"
       android:background="@color/lightBlueColorCode"
       >

       <android.support.v7.widget.RecyclerView
           android:id="@+id/videoList_RecyclerView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
          />
   </RelativeLayout>

</RelativeLayout>
